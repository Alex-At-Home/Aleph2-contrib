	  		<groupId>com.ikanow.aleph2</groupId>
	  		<artifactId>aleph2_server_only_dependencies</artifactId>
	  		<version>${aleph2.version}</version>
			<scope>${aleph2.scope}</scope>  		
		</dependency>
		<dependency>
			<!-- This just ensures that log4j won't be in the shaded jar via some transitive install -->
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>[0,)</version>
			<scope>provided</scope>			
		</dependency>
				
	</dependencies>
</project>
