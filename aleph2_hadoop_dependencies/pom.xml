<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ikanow.aleph2</groupId>
	<artifactId>aleph2_hadoop_dependencies</artifactId>
	<version>${aleph2.version}</version>
	<properties>
		<aleph2.version>2.9.0</aleph2.version>
		<aleph2.scope>compile</aleph2.scope>
		<aleph2.hadoop>2.7.1</aleph2.hadoop>
		<aleph2.hbase>1.1.4</aleph2.hbase>
	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eluder.coveralls</groupId>
				<artifactId>coveralls-maven-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<sourceEncoding>UTF-8</sourceEncoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.2.201409121644</version>
				<configuration>
					<excludes>
						<!-- (note that this appeared to fix a bamboo issue, but otherwise 
							that "." construct appears to do nothing) -->
						<exclude>**backtype.storm**</exclude>
						<!-- This actually removes code from coveralls.io -->
						<exclude>**/backtype/storm/*</exclude>
						<exclude>**/analytics/storm/modules/*</exclude>
						<!-- Example: <exclude>**/path/to/package/*</exclude> -->
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- execute using: mvn -e clean package shade:shade -Dmaven.test.skip=true -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<shadedArtifactAttached>true</shadedArtifactAttached>
							<filters>
								<!-- (see comments below for why this is necessary) -->
								<filter>								
									<artifact>org.apache.hbase:hbase-shaded-client</artifact>
									<excludes>
										<exclude>org/apache/hadoop/yarn/**</exclude>
										<exclude>org/apache/hadoop/util/**</exclude>
										<exclude>org/apache/hadoop/tools/**</exclude>
										<exclude>org/apache/hadoop/service/**</exclude>
										<exclude>org/apache/hadoop/security/**</exclude>
										<exclude>org/apache/hadoop/record/**</exclude>
										<exclude>org/apache/hadoop/mapreduce/**</exclude>
										<exclude>org/apache/hadoop/mapred/**</exclude>
										<exclude>org/apache/hadoop/metrics2/**</exclude>
										<exclude>org/apache/hadoop/metrics/**</exclude>
										<exclude>org/apache/hadoop/ipc/**</exclude>
										<exclude>org/apache/hadoop/io/**</exclude>
										<exclude>org/apache/hadoop/ha/**</exclude>
										<exclude>org/apache/hadoop/fs/**</exclude>
										<exclude>org/apache/hadoop/log/**</exclude>
										<exclude>org/apache/hadoop/jmx/**</exclude>
										<exclude>org/apache/hadoop/http/**</exclude>
										<exclude>org/apache/hadoop/classification/**</exclude>
										<exclude>org/apache/hadoop/conf/**</exclude>
										<exclude>org/apache/hadoop/*</exclude>
										<exclude>com/sun/activation/**</exclude>
										<exclude>javax/activation/**</exclude>
										<exclude>javax/xml/**</exclude>
										<exclude>org/apache/commons/**</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.jacoco</groupId>
										<artifactId>
											jacoco-maven-plugin
										</artifactId>
										<versionRange>
											[0.7.2.201409121644,)
										</versionRange>
										<goals>
											<goal>prepare-agent</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>jdk.tools</groupId>
			<artifactId>jdk.tools</artifactId>
			<version>${java.version}</version>
			<scope>system</scope>
			<systemPath>${JAVA_HOME}/lib/tools.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<!-- Other external dependencies here -->
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-mapreduce-client-core</artifactId>
			<version>${aleph2.hadoop}</version>
			<exclusions>
