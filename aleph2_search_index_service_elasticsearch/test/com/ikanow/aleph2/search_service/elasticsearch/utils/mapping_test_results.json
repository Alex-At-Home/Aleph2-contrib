{
  "template" : "recs_*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
       "properties" : {
       	 "column_only_disabled": { "index": "not_analyzed", "fielddata": { "format": "disabled" } },
         "@timestamp": { "type": "date", "fielddata": { } },
       	 "column_only_enabled": { "index": "not_analyzed", "fielddata": { "format": "doc_values" } },
         "@version": { "type": "string", "index": "analyzed", "fielddata": {"format":"fst"} },
         "sourceKey": { "type": "string", "index": "not_analyzed"},
         "geoip"  : {
           "type" : "object",
             "dynamic": true,
             "path": "full",
             "properties" : {
               "location" : { "type" : "geo_point" }
             }
         }
       },
       "dynamic_templates" : [
       {
         "columnBARonlyBARenabledSTAR_STAR" : {
           "mapping" : {
           	"index":"not_analyzed","fielddata":{"format":"doc_values"}
           },
           "match" : "column_only_enabled*",
           "match_mapping_type" : "*"
         }
       }, 
       {
         "STAR_number" : {
           "mapping" : {
           	"index":"not_analyzed","fielddata":{"format":"disabled"}
           },
           "match" : "*",
           "match_mapping_type" : "number"
         }
       }, 
       {
         "STARnoindex_STAR" : {
           "match" : "*noindex",
           "match_mapping_type" : "*",
           "mapping" : {
             "type" : "string", "index" : "not_analyzed", "fielddata": {"format":"disabled"}
           }
         }
       },
       {
         "STAR_string" : {
           "match" : "*",
           "match_mapping_type" : "string",
           "mapping" : {
             "type" : "string", "index" : "analyzed", "omit_norms" : true,
               "fields" : {
                 "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
               }, "fielddata": {"format":"fst"}
           }
         }
       }, 
       {
         "testSTAR_STAR" : {
           "match" : "test*",
           "match_mapping_type" : "*",
           "mapping" : {
             "type" : "string", "index" : "analyzed", "omit_norms" : true, 
               "fields" : {
                 "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
               }, "fielddata": {"format":"fst"}
           }
         }
       },
       {
         "columnBARonlyBARdisabledSTAR_STAR" : {
           "mapping" : {
           	"index":"not_analyzed","fielddata":{"format":"disabled"}
           },
           "match" : "column_only_disabled*",
           "match_mapping_type" : "*"
         }
       } 
       ]
    }
  }
}

